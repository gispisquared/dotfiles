# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        color_good = "#94B979"
        color_bad = "#E27373"
        color_degraded = "#FFBA7B"
}

order += "volume master"
order += "wireless _first_"
order += "battery all"
order += "cpu_usage all"
#order += "memory"
order += "tztime local"

volume master {
        format = " V %volume "
        format_muted = " M %volume "
}

wireless _first_ {
        format_up = " W%quality " 
        format_down = " W down " 
}

battery all {
        format =  " B %percentage %remaining " 
        integer_battery_capacity = true
        low_threshold = 30
        threshold_type = "time"
}

cpu_usage {
        format = " C %usage "
}

disk "/" {
        format =  " D %avail " 
}

load {
        format =  " L %1min " 
}

memory {
        format =  "M %used | %available " 
        threshold_degraded =  "1G" 
}

tztime local {
        format =  " %d/%m %H:%M:%S " 
}
